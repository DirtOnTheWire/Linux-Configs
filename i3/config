    bindsym 3 exec --no-startup-id /usr/share/playonlinux/playonlinux --run "Steam32bit" %F; focus; mode "default"
    bindsym 4 exec --no-startup-id /usr/share/playonlinux/playonlinux --run "Steam64" %F; focus; mode "default"
    bindsym 5 exec --no-startup-id playonlinux; focus; mode "default"
    bindsym 6 exec --no-startup-id sauerbraten; focus; mode "default"
    bindsym 7 exec --no-startup-id /usr/share/playonlinux/playonlinux --run "PFLauncher" %F; focus; mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


## System
bindsym $mod+F3 mode "$System"
set $System (1) Synaptic, (2) Settings, (3) Logout, (4) Lock
mode "$System" {

    bindsym 1 exec --no-startup-id synaptic-pkexec; focus; mode "default"
    bindsym 2 exec --no-startup-id xfce4-settings-manager; focus; mode "default"
    bindsym 3 exec --no-startup-id xfce4-session-logout; focus; mode "default"
    bindsym 4 exec --no-startup-id xflock4; focus; mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

