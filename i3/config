## Application launcher mode setting
bindsym $mod+q mode "$mode_system"
set $mode_system (1) General apps, (2) Games, (3) System, (4) Displays
mode "$mode_system" {

    bindsym 1 focus; mode "$General_apps"
    bindsym 2 focus; mode "$Games"
    bindsym 3 focus; mode "$System"
    bindsym 4 focus; mode "$Displays"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


## General apps
#bindsym $mod+F1 mode "$General_apps"
set $General_apps (1) Firefox, (2) FileMan, (3) Calculator (4) TaskMan
mode "$General_apps" {

    bindsym 1 exec firefox; focus; mode "default"
    bindsym 2 exec thunar; focus; mode "default"
    bindsym 3 exec gnome-calculator; focus; mode "default"
    bindsym 4 exec --no-startup-id xfce4-taskmanager; focus; mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## Games
bindsym $mod+F2 mode "$Games"
set $Games (1) ScreenCap (2) Steam.sh, (3) Steam32.exe, (4) Steam64.exe, (5) P.O.L, (6) Sauerbraten, (7) RF
